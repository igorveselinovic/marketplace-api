{
  "extends": [
    "eslint:recommended",
    "google"
  ],

  "parserOptions": {
    "ecmaVersion": 2018
  },

  "env": {
    "node": true,
    "es6": true
  },

  "rules": {
    "max-len": ["error", {
      "code": 120,
      "ignoreUrls": true
    }],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"]
  }
}